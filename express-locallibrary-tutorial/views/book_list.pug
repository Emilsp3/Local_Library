extends layout

block content
  h1= title

  form.search(action='', method='GET')
    input(type='text', placeholder='Search', name='search', value=(undefined === search ? '' : search))
    button(type='submit') Search
    
  ul
    each book in book_list
      li
        a(href=book.url) #{book.title}
        |  (#{book.author.name})

    else
      li There are no books.